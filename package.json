{
  "name": "project-overwatch",
  "version": "0.1.0",
  "description": "Voice-controlled tactical overwatch game",
  "type": "module",
  "scripts": {
    "start": "concurrently -n server,client -c blue,green \"npm run server\" \"npm run client\"",
    "start:mock": "concurrently -n server,client -c blue,green \"npm run server:mock\" \"npm run client\"",
    "server": "python server/run_server.py",
    "server:mock": "python server/run_server.py --mock",
    "client": "npx http-server client/public -p 3000 -c-1 --cors -s",
    "install:all": "npm install && pip install -r requirements.txt",
    "install:python": "pip install -r requirements.txt",
    "dev": "npm run start:mock"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "game",
    "voice-control",
    "tactical",
    "threejs",
    "whisper"
  ],
  "license": "MIT"
}
